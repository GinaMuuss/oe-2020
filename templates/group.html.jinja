{% extends "layout.html.jinja" %}

{% block content %}
	{% if(success) %}
        <div class="alert alert-success" role="alert">
            {{success}}
        </div>
	{% endif %}
	{% if error %}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
	{% endif %}
	<div style="min-height: 20px;"></div>
	<div class="content">
		<h1>Gruppe {{group.name}}</h1>
		{% if(question) %}
		<h2>{{question.question}}</h2>
			{% if(group.answers[question.access_hash])%}
			<p>Eure aktuelle Antwort lautet: {{group.answers[question.access_hash]}}</p>
			{% endif %}
		<form action="/group/{{group.access_hash}}" method="POST">
			<div class="form-group">
				<label for="answer">Antwort</label>
				<select class="form-control" id="answer", name="answer">
				{% for a in question.answers %}
					<option>{{a}}</option>
				{% endfor %}
				</select>
			</div>
  			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
		{% else %}
		<h2>Aktuell wird keine Frage gespielt</h2>
		{% endif %}

		<form action="/group/{{group.access_hash}}" method="POST">
			 <div class="form-group">
				<label for="group_name">Gruppenname</label>
				<input type="text" class="form-control" id="group_name" name="group_name">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
{% endblock %}
